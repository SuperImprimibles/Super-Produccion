{
  "name": "super-imprimible",
  "version": "2.0.0",
  "description": "Aplicación de escritorio para Super Imprimibles con LibreOffice y rembg",
  "main": "source/main.js",
  "scripts": {
    "start": "npm run verify && electron .",
    "dev": "electron . --dev",
    "verify": "node source/verify-dependencies.js",
    "auto-install": "node source/auto-installer.js",
    "install-rembg": "node source/auto-installer.js --rembg-only",
    "setup": "npm install && npm run auto-install",
    "test-rembg": "python -c \"from rembg import remove; print('✅ rembg OK')\"",
    "test-python": "python --version && pip list | grep -E 'rembg|python-pptx|Pillow'"
  },
  "keywords": [
    "electron",
    "super-imprimibles",
    "diseño",
    "libreoffice",
    "python-pptx",
    "rembg",
    "background-removal"
  ],
  "author": "Super Imprimibles",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.0.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3"
  },
  "requirements": {
    "system": [
      "LibreOffice 7.0+",
      "Python 3.7+",
      "CUDA (opcional, para GPU acceleration en rembg)"
    ],
    "python": [
      "rembg[gpu] >= 2.0.50",
      "python-pptx >= 0.6.21",
      "Pillow >= 9.0.0"
    ]
  },
  "postinstall": "node source/auto-installer.js"
}